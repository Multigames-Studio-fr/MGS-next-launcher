    <link type="text/css" rel="stylesheet" href="./assets/css/launcher2.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: "Sora", serif;
            font-optical-sizing: auto;
            /*background: url('assets/images/backgrounds/<%=bkid%>.jpg') no-repeat center center fixed;*/
        }
        @import url('http://multigames-studio.fr/font/fs-mojang-studios-2.otf');
        @font-face {
            font-family: 'Mojang';
            src: url('http://multigames-studio.fr/font/fs-mojang-studios-2.otf') format('opentype');
            font-weight: normal;
            font-style: normal;
        }   
        .font-mojang {
            font-family: 'Mojang', sans-serif;
            font-weight: 41px;
            font-style: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
        }
        #main {
            display: none;
            height: calc(100% - 22px);
            width: 100%;
            position: absolute;
            z-index: 10;
        }



        .launch-progress {
            width: 100%;
            height: 2rem;
            background-color: #4a5568;
            /* Tailwind CSS bg-gray-700 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
            transition: width 0.5s ease-in-out;
            position: relative;
            z-index: 1;
        }

        .launch-progress::-webkit-progress-bar {
            background-color: #4a5568;
            /* Tailwind CSS bg-gray-700 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
        }

        .launch-progress::-webkit-progress-value {
            background-color: #3182ce;
            /* Tailwind CSS bg-blue-600 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
            transition: width 0.5s ease-in-out;
        }

        .launch-progress::-moz-progress-bar {
            background-color: #3182ce;
            /* Tailwind CSS bg-blue-600 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
            transition: width 0.5s ease-in-out;
        }

        .progress-text {
            position: absolute;
            top: 45%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
            color: white;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: #2d3748;
            /* Tailwind CSS bg-gray-800 */
            border-radius: 6px;
        }

        ::-webkit-scrollbar-thumb {
            background: #4a5568;
            /* Tailwind CSS bg-gray-700 */
            border-radius: 6px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #718096;
            /* Tailwind CSS bg-gray-600 */
        }

        ::-webkit-scrollbar-thumb:active {
            background: #a0aec0;
            /* Tailwind CSS bg-gray-500 */
        }
    </style>
</head>

<body class="dark bg-gray-900" bkid="<%=bkid%>">
